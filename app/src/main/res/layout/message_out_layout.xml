<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="end"
    android:layout_margin="4dp"
    android:paddingLeft="72dp"
    android:layout_height="wrap_content">

    <TextView
        android:elevation="2dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:id="@+id/chat_text"
        android:text="Hi...................................................................................................."
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:background="@drawable/outgoing_message_text_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="-12dp"
        android:layout_below="@+id/chat_text"
        android:layout_alignParentEnd="true"
        android:text="@string/message_submitted_icon"
        android:padding="2dp"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:background="@drawable/outgoing_message_text_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_sending_status" />

    <TextView
        android:id="@+id/outgoing_chat_timestamp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/chat_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:text="12:10 PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>